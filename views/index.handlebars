
<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>!EAT DE BURGER!</h1>
            <img src="/assests/img/burger.png">
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                 {{#unless this.devoured}}
                 <div class="col-xs-9 text-center">
                     <pre>{{this.id}}.{{this.burger_name}}</pre>
                 </div>
               <div class="col-xs-3 text-center">
                   <form class="button-size devourBtn">
                    <input type="hidden" class="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default" >!DEVOUR IT!</button>
                   </form>
               </div>
               {{/unless}}
               {{/each}}
            </div>
            <div class="col-xs-6 text-center" class="task">
                {{#each burger_data}}
                  {{#if this.devoured}}
